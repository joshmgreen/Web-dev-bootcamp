<%- include("header.ejs") %>

<form action="/submit" method="POST">
  <div>
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= selectedBlog ? selectedBlog.title : '' %>"
      required
    />
  </div>
  <div>
    <label for="content">Content:</label>
    <textarea id="content" name="content" rows="10" cols="50" required>
<%= selectedBlog ? selectedBlog.content : '' %></textarea
    >
  </div>
  <% if (selectedBlog) { %>
  <input type="hidden" name="id" value="<%= selectedBlog.id %>" />
  <% } %>
  <div>
    <button type="submit">Submit</button>
  </div>
</form>

<% if (selectedBlog) { %>
<form
  action="/delete/<%= selectedBlog.id %>"
  method="POST"
  style="display: inline"
>
  <button
    type="submit"
    onclick="return confirm('Are you sure you want to delete this blog post?')"
  >
    Delete
  </button>
</form>
<% } %> <%- include("blogs.ejs") %> <%- include("footer.ejs") %>
